<%= form_for @user do |u| %>
  <ul>
  <% @user.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= u.label :username %>
    <%= u.text_field :username %>
  </p>
   <p>
    <%= u.label :email %><br />
    <%= u.text_field :email %>
  </p>
   <p>
    <%= u.label :password %><br />
    <%= u.password_field :password %>
  </p>
   <p>
    <%= u.submit %>
  </p>
<% end %>